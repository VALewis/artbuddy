html
	head
		title Artbuddy authentication
		
		meta(charset="utf-8")
		meta(name="viewport" content="width=device-width, initial-scale=1")
		
		link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous")
		link(rel="stylesheet" href="https://fonts.googleapis.com/css?family=Nunito")
		
		script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js")
		
		style(type='text/css')
			include ../public/forms.css
	

	body

		form(id="buttonGroupForm" method="post" action='/interests' class="form-horizontal")
			div(class="form-group")
				label(class="col-xs-3 control-label") Gender
				div(class="col-xs-9")
					div(class="btn-group" data-toggle="buttons")
						label(class="btn btn-default")
							input(type="radio" name="gender" value="Male")
						label(class="btn btn-default")
							input(type="radio" name="gender" value="Female")
						label(class="btn btn-default")
							input(type="radio" name="gender" value="Queer/other")

			div(class="form-group")
				label(class="col-xs-3 control-label") Languages
					div class="btn-group" data-toggle="buttons")
						label(class="btn btn-default")
							input(type="checkbox" name="languages[]" value="dutch") Dutch
						label(class="btn btn-default")
							input(type="checkbox" name="languages[]" value="english") English
						label(class="btn btn-default")
							input(type="checkbox" name="languages[]" value="german") German
						label(class="btn btn-default")
							input(type="checkbox" name="languages[]" value="french") French
						label(class="btn btn-default")
							input(type="checkbox" name="languages[]" value="spanish") Spanish
						label(class="btn btn-default")
							input(type="checkbox" name="languages[]" value="russian") Russian
						label(class="btn btn-default")
							input(type="checkbox" name="languages[]" value="italian") Italian


			div(class="form-group")
				div(class="col-xs-9 col-xs-offset-3")
			input(type="submit" class="btn btn-default" value="Validate")


			script.
				$(document).ready(function() {
					$('#buttonGroupForm').formValidation({
						framework: 'bootstrap',
						icon: {
							valid: 'glyphicon glyphicon-ok',
							invalid: 'glyphicon glyphicon-remove',
							validating: 'glyphicon glyphicon-refresh'
						},
						excluded: ':disabled',
						fields: {
							gender: {
								validators: {
									choice: {
										min: 1,
										message: "Choose at least one gender you'd like to meet"
									}
								}
							},
							'languages[]': {
								validators: {
									choice: {
										min: 1,
										message: "Choose at least 1 language you can speak"
									}
								}
							}
						}
					});
				});




