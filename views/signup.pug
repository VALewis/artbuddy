html
	head
		title Artbuddy authentication
		meta(charset="utf-8")
		meta(name="viewport" content="width=device-width, initial-scale=1")
		link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous")
		link(rel="stylesheet" href="https://fonts.googleapis.com/css?family=Nunito")
		script(src="https://use.fontawesome.com/937272718b.js")
		script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js")
		//- style(type='text/css')
		//-   include ../public/headers.css

	body
		div(class='container')

		div(class='col-sm-6 col-sm-offset-3')
			h1(class='fa fa-sign-in') Signup
			-if(message)
				.alert.alert-danger !{message}
		
		form(id='signup' method='POST' action='/signup')
			div(class='form-group')
				label Full name
				input(class='form-control' type='text' name='fullname' id='fullname')
			div(class='form-group')
				label Email address
				input(class='form-control' type='text' name='email' id='email')
			div(class='form-group')
				label Create username
				input(class='form-control' type='text' name='username' id='username')
			div(class='form-group')
				label Create password
				input(class='form-control' type='password' name='password' placeholder='Min. 8 characters and 1 digit' id='password')
			div(class='form-group')
				label Age
				input(class='form-control' type='text' name='age' id='age')
			div(class='form-group')
				label Gender
				input(class='form-control' type='checkbox' name='male' id=' male')
				input(class='form-control' type='checkbox' name='female' id='female')
				input(class='form-control' type='checkbox' name='queer' id='queer')

			input(type="submit" class="btn btn-warning btn lg" value="Signup")

		p Already have an account? 
			a(href='/login') Login
		p Or prefer to log in with Facebook or Google? 
			a(href="/") Home
